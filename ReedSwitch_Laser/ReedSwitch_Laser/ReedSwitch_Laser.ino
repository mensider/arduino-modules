/*Demonstrates the working of Reed Switch and Laser diodeBy Sooraj K*/const int Reed = 8;               // Pin connected to reed switchconst int Laser = 10;             // Pin connected to Laser diodevoid setup() {  pinMode(Reed, INPUT_PULLUP);    //reed needs internal pullup  pinMode(Laser, OUTPUT);         }void loop() {    if (digitalRead(Reed) == LOW)              // If the pin reads low, the switch is closed.    digitalWrite(Laser, HIGH);      // Turn the Laser on  else    digitalWrite(Laser, LOW);       // Turn the Laser off}