/*Demonstrates the working of Ultrasonic Sensor and RGB7 Colour Flash LEDBy Sooraj K*/int pingPin = 7;          // Trigger Pin of Ultrasonic Sensorint echoPin = 6;          // Echo Pin of Ultrasonic Sensorint 7colour = 8;          // Signal Pin of 7 Colour flashlong duration, cm;void setup() {  // Serial.begin(9600); // Starting Serial Terminal  pinMode(pingPin, OUTPUT);  pinMode(echoPin, INPUT); }void loop() {    //Sends a 10 uS pulse to pingPin  digitalWrite(pingPin, LOW);  delayMicroseconds(2);  digitalWrite(pingPin, HIGH);  delayMicroseconds(10);  digitalWrite(pingPin, LOW);    //Calculates duration of reflected sound wave  duration = pulseIn(echoPin, HIGH);    //Converts the distance to centimetres  cm = microsecondsToCentimeters(duration);    //7-colour flash illuminates according to the distance in cms  if (cm<5) {    digitalWrite(7colour, HIGH);  }  else {    digitalWrite(7colour, LOW);  }    delay(100);}long microsecondsToCentimeters(long microseconds) {  return microseconds / 29 / 2;}